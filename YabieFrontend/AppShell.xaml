<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YabieFrontend.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:YabieFrontend"
    xmlns:pages="clr-namespace:YabieFrontend.UI.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage"/>
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:DashboardPage}"
        Route="DashboardPage"/>
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:ItemPage}"
        Route="ItemPage"/>
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:AuctionGuidelinesPage}"
        Route="AuctionGuidelines"/> 
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:AuctionPage}"
        Route="Auction"/>
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:AuctionListPage}"
        Route="AuctionListPage"/>    
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:SendOtpPage}"
        Route="AuctionListPage"/>    
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:VerifyOtpPage}"
        Route="AuctionListPage"/>

</Shell>
